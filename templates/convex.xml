<?xml version="1.0"?>
<Container>
  <Name>Convex</Name>
  <Repository>ghcr.io/get-convex/convex-backend</Repository>
  <Registry>https://ghcr.io/get-convex</Registry>
  <Network>bridge</Network>
  <Privileged>false</Privileged>
  <SupportURL>https://github.com/get-convex/convex</SupportURL>
  <ProjectURL>https://convex.dev/</ProjectURL>
  <Overview>
    Convex ist eine Echtzeit-Backend-Plattform, die Daten synchronisiert, Funktionen ausführt und Dateispeicher bereitstellt.
    Dieses Template umfasst den Backend-Dienst und das Dashboard.
  </Overview>
  <Category>Productivity: Tools: Network: Other:</Category>
  <WebUI>http://[IP]:[PORT]</WebUI>
  <TemplateURL/>
  <Icon>https://convex.dev/favicon.ico</Icon>
  <ExtraParams/>
  <PostArgs/>
  <CPUshares/>
  <Config Name="Convex Backend Port" Target="3210" Default="3210" Mode="tcp" Description="Standard-Port für das Convex Backend" Type="Port" Display="always" Required="true" Mask="false">3210</Config>
  <Config Name="Convex Site Proxy Port" Target="3211" Default="3211" Mode="tcp" Description="Port für den Convex Site Proxy" Type="Port" Display="always" Required="false" Mask="false">3211</Config>
  <Config Name="Convex Dashboard Port" Target="6791" Default="6791" Mode="tcp" Description="Standard-Port für das Convex Dashboard" Type="Port" Display="always" Required="true" Mask="false">6791</Config>
  <Config Name="Data Path" Target="/convex/data" Default="/mnt/user/appdata/convex/data" Mode="rw" Description="Pfad für die persistenten Daten des Convex Backends" Type="Path" Display="always" Required="true" Mask="false"/>

  <Config Name="Instance Name" Target="INSTANCE_NAME" Default="" Mode="" Description="Optionaler Instanzname für Convex." Type="Variable" Display="always" Required="false" Mask="false"/>
  <Config Name="Instance Secret" Target="INSTANCE_SECRET" Default="" Mode="" Description="Geheimer Schlüssel für die Instanzauthentifizierung." Type="Variable" Display="always" Required="false" Mask="true"/>
  <Config Name="Convex Release Version (Dev)" Target="CONVEX_RELEASE_VERSION_DEV" Default="" Mode="" Description="Entwicklungsversion der Convex-Freigabe." Type="Variable" Display="advanced" Required="false" Mask="false"/>
  <Config Name="Actions User Timeout (Secs)" Target="ACTIONS_USER_TIMEOUT_SECS" Default="" Mode="" Description="Timeout für Benutzeraktionen in Sekunden." Type="Variable" Display="advanced" Required="false" Mask="false"/>
  <Config Name="Convex Cloud Origin" Target="CONVEX_CLOUD_ORIGIN" Default="http://127.0.0.1:3210" Mode="" Description="Ursprung der Convex Cloud API." Type="Variable" Display="advanced" Required="false" Mask="false"/>
  <Config Name="Convex Site Origin" Target="CONVEX_SITE_ORIGIN" Default="http://127.0.0.1:3211" Mode="" Description="Ursprung der Convex Site." Type="Variable" Display="advanced" Required="false" Mask="false"/>
  <Config Name="Database URL" Target="DATABASE_URL" Default="" Mode="" Description="URL zur externen Datenbank." Type="Variable" Display="advanced" Required="false" Mask="true"/>
  <Config Name="Disable Beacon" Target="DISABLE_BEACON" Default="" Mode="" Description="Setzen Sie dies auf 'true', um Beacon zu deaktivieren." Type="Variable" Display="advanced" Required="false" Mask="false"/>
  <Config Name="Redact Logs to Client" Target="REDACT_LOGS_TO_CLIENT" Default="" Mode="" Description="Setzen Sie dies auf 'true', um sensitive Informationen in Logs zu zensieren." Type="Variable" Display="advanced" Required="false" Mask="false"/>
  <Config Name="Do Not Require SSL" Target="DO_NOT_REQUIRE_SSL" Default="" Mode="" Description="Setzen Sie dies auf 'true', um SSL-Anforderungen zu ignorieren (nicht empfohlen für Produktion)." Type="Variable" Display="advanced" Required="false" Mask="false"/>
  <Config Name="Postgres URL" Target="POSTGRES_URL" Default="" Mode="" Description="URL zur PostgreSQL-Datenbank." Type="Variable" Display="advanced" Required="false" Mask="true"/>
  <Config Name="MySQL URL" Target="MYSQL_URL" Default="" Mode="" Description="URL zur MySQL-Datenbank." Type="Variable" Display="advanced" Required="false" Mask="true"/>
  <Config Name="Rust Log Level" Target="RUST_LOG" Default="info" Mode="" Description="Loglevel für Rust-Anwendungen (z.B. info, debug, trace)." Type="Variable" Display="advanced" Required="false" Mask="false"/>
  <Config Name="Rust Backtrace" Target="RUST_BACKTRACE" Default="" Mode="" Description="Setzen Sie dies auf '1' für Rust-Backtraces bei Fehlern." Type="Variable" Display="advanced" Required="false" Mask="false"/>
  <Config Name="AWS Region" Target="AWS_REGION" Default="" Mode="" Description="AWS-Region für S3-Speicher." Type="Variable" Display="advanced" Required="false" Mask="false"/>
  <Config Name="AWS Access Key ID" Target="AWS_ACCESS_KEY_ID" Default="" Mode="" Description="AWS-Zugriffsschlüssel-ID." Type="Variable" Display="advanced" Required="false" Mask="true"/>
  <Config Name="AWS Secret Access Key" Target="AWS_SECRET_ACCESS_KEY" Default="" Mode="" Description="AWS-Geheimschlüssel." Type="Variable" Display="advanced" Required="false" Mask="true"/>
  <Config Name="AWS Session Token" Target="AWS_SESSION_TOKEN" Default="" Mode="" Description="AWS-Sitzungs-Token." Type="Variable" Display="advanced" Required="false" Mask="true"/>
  <Config Name="S3 Exports Bucket" Target="S3_STORAGE_EXPORTS_BUCKET" Default="" Mode="" Description="S3-Bucket für Exporte." Type="Variable" Display="advanced" Required="false" Mask="false"/>
  <Config Name="S3 Snapshot Imports Bucket" Target="S3_STORAGE_SNAPSHOT_IMPORTS_BUCKET" Default="" Mode="" Description="S3-Bucket für Snapshot-Importe." Type="Variable" Display="advanced" Required="false" Mask="false"/>
  <Config Name="S3 Modules Bucket" Target="S3_STORAGE_MODULES_BUCKET" Default="" Mode="" Description="S3-Bucket für Module." Type="Variable" Display="advanced" Required="false" Mask="false"/>
  <Config Name="S3 Files Bucket" Target="S3_STORAGE_FILES_BUCKET" Default="" Mode="" Description="S3-Bucket für Dateien." Type="Variable" Display="advanced" Required="false" Mask="false"/>
  <Config Name="S3 Search Bucket" Target="S3_STORAGE_SEARCH_BUCKET" Default="" Mode="" Description="S3-Bucket für die Suche." Type="Variable" Display="advanced" Required="false" Mask="false"/>
  <Config Name="S3 Endpoint URL" Target="S3_ENDPOINT_URL" Default="" Mode="" Description="Benutzerdefinierte S3-Endpunkt-URL." Type="Variable" Display="advanced" Required="false" Mask="false"/>

  </Container>
